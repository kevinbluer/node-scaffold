<div id="map_canvas" style="width:100%; height: 100%; border: solid 1px #959595;"></div>

<script>

        var myOptions = {
            center: new google.maps.LatLng(40.723229, -74.00657),
            zoom: 4,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        
        var mapElement = $("#map_canvas");

var styles = [
  {
    stylers: [
      { hue: "#00ffe6" },
      { saturation: -20 }
    ]
  },{
    featureType: "road",
    elementType: "geometry",
    stylers: [
      { lightness: 100 },
      { visibility: "simplified" }
    ]
  },{
    featureType: "road",
    elementType: "labels",
    stylers: [
      { visibility: "off" }
    ]
  }
];

        var infowindow;
        
        var map = new google.maps.Map(mapElement[0], myOptions);
        map.setOptions({styles: styles});

        <% for (item in items) { %>
            var marker = new google.maps.Marker({
                position: new google.maps.LatLng(<%- items[item].where[0] %>, <%- items[item].where[1] %>),
                map: map,            
                icon: "/img/paw-2.png"
            });
        <% } %>

</script>